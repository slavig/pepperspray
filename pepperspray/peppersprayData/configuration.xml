<configuration>
	<chat-server>
		<!--
			Address and port of chat server.
		-->
		<addr ip="auto" port="8124" />

		<!-- 
			If server didn't receive a message in this interval from particular player
			that player will be kicked.
		 -->
		<player-inactivity-timeout seconds="20" />
	</chat-server>

	<rest-api-server>
		<!--
			Address and port of REST API server.
		-->
		<addr ip="auto" port="8080" />

		<!--
			Cross-origin headers configuration, REST API will allow
			requests from this ip:port combination only 
			(should be configured to point at peppersprayWeb).
		-->
		<cross-origin allow-ip="auto" port="8082" />

		<!--
			Recaptcha configuration. Some actions on the peppersprayWeb will
			use reCaptcha in order to validate requests. 

			* `invisible` is a reCaptcha v2 (Invisible)
			* `visible` is a reCaptcha v2 (Checkbox or Not a robot)
		-->
		<recaptcha enabled="false" invisible-secret="SECRET" visible-secret="SECRET" />

		<!--
			If statics redirection is enabled photo & world downloads will
			be redirected to specified host (since pepperspray itself is not that
			great at serving statics).
		-->
		<statics-redirection enabled="false" host="http://127.0.0.1" />

		<!--
			In order to prevent bruteforce attacks on login server socket each unsuccessfull 
			attempt will be held back by amount of seconds.
		-->
		<login-attempt-throttle seconds="3" />

		<!--
			Number of cached words in RAM. Consumes memory, 
			exact number depends on the worlds in question.
		-->
		<worlds ram-cache-capacity="20" />

		<!--
			With currency system enabled some of the actions will spend user Currency,
			padding will determine the "zero" value in order to trick the client into
			thinking that there's more currency (value should match client configuration value).
		-->
		<currency enabled="false" padding="100000" />

		<!--
			Amount of photo slots available for players and maximum photo size (in bytes).
		-->
		<photos	slot-count="6" size-limit="4194304" />

		<!--
			Radiostations for standard locations.
		-->
		<radiostations>
			<lobby id="SALOON" url="http://dione.shoutca.st:8021/stream" />
			<lobby id="beach" url="http://dione.shoutca.st:8030/stream.m3u" />
			<lobby id="island" url="http://dione.shoutca.st:8004/stream" />
			<lobby id="CLUB_NEW" url="http://dione.shoutca.st:8027/stream" />
			<lobby id="YACHT" url="http://dione.shoutca.st:8011/stream" />
			<lobby id="club" url="http://dione.shoutca.st:8033/stream" />
			<lobby id="BDSM_club" url="http://dione.shoutca.st:8024/stream" />
		</radiostations>

		<mail>
			<!--
				SMTP server address and port used to send out e-mails.
			-->
			<smtp-server addr="smtp.test.com" port="587" />

			<!--
				Mail address login credentials.
			-->
			<credentials username="test" password="test" />

			<!--
				Sender for mail messages.
			-->
			<sender addr="test@test.com" />
		</mail>

		<news>
			<!--
				News entries. Supported attributes: "title" (required), 
				"image" (image url, optional), "url" (url to open on click, optional).
				Text will be trimmed, game supports following attributes: <br />, <b>, <i>.
			-->
			<entry title="Test title 1.">
Test line <b>1</b>.
<br />Test line <b>2</b>.
			</entry>
			<entry title="Test title 2.">
Test line <b>1</b>.
<br />Test line <b>2</b>.
			</entry>
		</news>
	</rest-api-server>

	<login-server>
		<!--
			Login server's address and port.
		-->
		<addr ip="auto" port="8081" />
	</login-server>

	<!--
		Hash salt used to construct access tokens.
	-->
	<token salt="pepperspraySalt" />
</configuration>
